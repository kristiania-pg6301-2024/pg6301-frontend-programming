{
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "scripts": {
    "dev": "concurrently npm:dev:client npm:dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "test": "tsc --noEmit && npm run test:shared && npm run test:client && npm run test:server && prettier --check .",
    "test:shared": "vitest --watch=false",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "prepare": "husky",
    "postinstall": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install --include=dev",
    "install:server": "cd server && npm install --include=dev"
  },
  "dependencies": {
    "supertest": "^7.0.0"
  }
}
