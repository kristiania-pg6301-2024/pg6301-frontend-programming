{
  "name": "pg6301-frontend-programming",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently npm:dev:client npm:dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "test": "vitest --watch=false && npm run test:client && prettier --check .",
    "test:client": "cd client && npm test",
    "test:watch": "vitest",
    "prepare": "husky",
    "postinstall": "npm run install:client",
    "install:client": "cd client && npm install --include=dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  }
}
