{
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "scripts": {
    "dev": "concurrently npm:dev:client npm:dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "test": "vitest",
    "pre-commit": "vitest --watch=false && prettier --check . && tsc --noEmit && npm run pre-commit:client",
    "pre-commit:client": "cd client && npm run pre-commit",
    "prepare": "husky"
  },
  "dependencies": {
    "supertest": "^7.0.0"
  }
}
